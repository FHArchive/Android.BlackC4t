<?xml version="1.0" encoding="utf-8"?>

<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        tools:context=".About">

    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:layout_marginEnd="@dimen/activity_horizontal_margin"
                  android:layout_marginStart="@dimen/activity_horizontal_margin" android:layout_marginTop="@dimen/activity_vertical_margin"

                  android:orientation="vertical">

        <TextView
                android:text="@string/about_head"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textView"

                android:layout_marginTop="8dp"
                android:textSize="24sp"/>
        <TextView
                android:text="@string/about_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textView2"

                android:layout_marginTop="4dp"
                android:textSize="18sp"
        />
        <TextView
                android:text="@string/about_otp_head"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textView3"

                android:layout_marginTop="8dp"
                android:textSize="24sp"/>
        <TextView
                android:text="@string/about_otp_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textView4"

                android:layout_marginTop="4dp"
                android:textSize="18sp"
        />
        <TextView
                android:text="@string/about_2kotp_head"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textView7"

                android:layout_marginTop="8dp"
                android:textSize="24sp"/>
        <TextView
                android:text="@string/about_2kotp_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textView8"

                android:layout_marginTop="4dp"
                android:textSize="18sp"
        />
        <TextView
                android:text="@string/about_pke_head"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textView5"

                android:layout_marginTop="8dp"
                android:textSize="24sp"/>
        <TextView
                android:text="@string/about_pke_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textView6"

                android:layout_marginTop="4dp"
                android:textSize="18sp"
        />
        <TextView
                android:text="@string/about_password_head"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textView9"

                android:layout_marginTop="8dp"
                android:textSize="24sp"/>
        <TextView
                android:text="@string/about_password_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textView10"

                android:layout_marginTop="4dp"
                android:textSize="18sp"
        />

    </LinearLayout>



</ScrollView>