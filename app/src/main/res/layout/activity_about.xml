<?xml version="1.0" encoding="utf-8"?>

<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".About">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <TextView
            android:text="@string/about_head"
            android:id="@+id/textView"
            style="@style/heading_text_style"
            />
        <TextView
            android:text="@string/about_description"
            android:id="@+id/textView2"
            style="@style/body_text_style"
        />
        <TextView
            android:text="@string/about_otp_head"
            android:id="@+id/textView3"
            style="@style/heading_text_style"
            />
        <TextView
            android:text="@string/about_otp_description"
            android:id="@+id/textView4"
            style="@style/body_text_style"
        />
        <TextView
            android:text="@string/about_2kotp_head"
            android:id="@+id/textView7"
            style="@style/heading_text_style"
            />
        <TextView
            android:text="@string/about_2kotp_description"
            android:id="@+id/textView8"
            style="@style/body_text_style"
        />
        <TextView
            android:text="@string/about_pke_head"
            android:id="@+id/textView5"
            style="@style/heading_text_style"
            />
        <TextView
            android:text="@string/about_pke_description"
            android:id="@+id/textView6"
            style="@style/body_text_style"
        />
        <TextView
            android:text="@string/about_password_head"
            android:id="@+id/textView9"
            style="@style/heading_text_style"
            />
        <TextView
            android:text="@string/about_password_description"
            android:id="@+id/textView10"
            style="@style/body_text_style"
        />

    </LinearLayout>


</ScrollView>